import random 
#DICTIONNAIRE AVEC MOTS POSSIBLES
word_list = ['comme','entre','cette','notes','trois','place','ann√©e','apr√®s','aussi','alors','ainsi','ville','monde','titre','avant','d√©c√®s','s√©rie','avoir','temps','d√©but','autre','suite','faire','cours','leurs','album','ligne','moins','homme','forme','grand','selon','genre','situ√©','ayant','coupe','sc√®ne','nomm√©','celle','celui','sorti','ordre','arm√©e','reste','droit','point','femme','si√®ge','effet','toute','maire','poste','corps','parti','roman','√©cole','connu','porte','image','ouest','livre','style','union','terme','petit','ligue','passe','fr√®re','dur√©e','parmi','objet','cadre','mus√©e','cause','comte','quand','seule','terre','vid√©o','donn√©','libre','russe','stade','rouge','poids','total','label','blanc','score','saint','large','salle','√©tude','bande','assez','aucun','mus√©e','belge','signe','pi√®ce','prise','force','pass√©','hiver','sujet','fond√©','issue','choix','sant√©','acc√®s','amour','carte','basse','coeur','moyen','unit√©','revue','heure','piano','soeur','enfin','phase']
#CHOIX D'UN MOT ALEATOIRE DU DICTIONNAIRE
answer = random.choice(word_list)

#MOT UTILISATEUR
def input_guess():
    my_input = input("ESSAI "+str(i+1)+"?\n")
    if my_input == None: return "     " #SI L'UTILISATEUR NE DONNE AUCUN MOT
    elif len(my_input) != 5: return my_input[0:5] #PRENDS UNIQUEMENT LES 5 PREMIERES LETTRES
    else: return my_input.lower() #CONVERTIT LE MOT EN MINUSCULE (AFIN D'EVITER DES ERREURS)

#VERIFICATION DU MOT
def check_guess(my_input, answer):
    a = 0 
    verify = []
    for i in my_input:
        if i == answer[a]:
            verify.append("üü©")
        elif i in answer:
            verify.append("üüß")
        else: 
            verify.append("üü•")
        a+=1 #INCREMENTATION DE A
        if a == 5:
            print (str(verify))

    
#WORDLE
for i in range(6):
    if i == 0:
        print("WORDLE FR - TROUVEZ LE MOT DE 5 LETTRES EN 6 ESSAIS \n")
    my_input = input_guess()
    check_guess(my_input, answer)
    if my_input == answer:
        print("Bien jou√© !!")
        break
else: #SI TOUS LES ESSAIS SONT UTILISES
    print("Dommage, la r√©ponse √©tait : " + answer)

